<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile | OnlyNotes</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <header class="navbar">
        <div class="logo-area">
            <div class="logo-icon">N</div>
            <span class="logo-text">OnlyNotes</span>
        </div>
        <div class="user-profile">
            <img src="https://ui-avatars.com/api/?name=<%= name %>&background=a855f7&color=fff" style="width: 40px; height: 40px; border-radius: 50%;">
        </div>
    </header>
    <div class="app-container">
        <aside class="sidebar-left">
            <div class="sidebar-group">
                <p class="group-title">UTILITIES</p>
                <a href="/" style="text-decoration: none; color: inherit;">
                  <button class="menu-item upload-btn"><i class="fa-solid fa-home text-purple-500"></i> Home Page</button>
                </a>
                <a href="/upload" style="text-decoration: none; color: inherit;">
                  <button class="menu-item upload-btn"><i class="fa-solid fa-plus text-purple-500"></i> Upload Note</button>
                </a>
                <a href="/dashboard" style="text-decoration: none; color: inherit;">
                  <button class="menu-item upload-btn"><i class="fa-solid fa-receipt text-purple-500"></i> Dashboard</button>
                </a>
                <a href="/leaderboard" style="text-decoration: none; color: inherit;">
                  <button class="menu-item upload-btn"><i class="fa-solid fa-trophy text-purple-500"></i> Leaderboard</button>
                </a>
                <form action="/logout?_method=DELETE" method="POST" style="text-decoration: none;">
                    <button type="submit" class="menu-item upload-btn"><i class="fa-solid fa-right-from-bracket text-purple-500"></i> Sign Out</button>
                </form>
            </div>
        </aside>
        <main class="profile-container">
            <% 
                const initials = user.name.split(' ').map(n => n[0]).join('').toUpperCase();
                const joinedDate = new Date(user.created_at).toLocaleDateString('en-GB', {
                    day: '2-digit', month: 'short', year: 'numeric'
                });
            %>
            <section class="profile username card">
                <div class="profile avatar"><%= initials %></div>
                <h2 class="profile name"><%= user.name %></h2>
                <p class="profile email">Email: <%= user.email %></p>
                <p class="profile joined">Member since <%= joinedDate %></p>
                <span class="profile badge">Level: <%= user.rank_level %></span>
                <div class="profile stats">
                    <div class="profile stat">
                        <h4>Notes</h4>
                        <p><%= stats.notes_count %></p>        
                    </div>
                    <div class="profile stat"> 
                        <h4>Upvotes</h4>
                        <p><%= stats.total_upvotes %></p>      
                    </div>    
                    <div class="profile stat">    
                        <h4>Saved</h4>    
                        <p><%= stats.saved_count %></p>       
                    </div>
                </div>
            </section>
            <section class="profile interests">
                <h2>Uploaded Notes</h2>
                <div class="profile cards" style="display: flex; flex-wrap: wrap; gap: 20px; justify-content: center;">
                    <% if (uploadedNotes.length > 0) { %>
                        <% uploadedNotes.forEach(note => { %>
                            <div class="note-card-wrapper" style="position: relative; width: fit-content;">
                                <a href="javascript:void(0)" class="profile topic-card note-button" data-title="<%= note.title %>"
                                    data-content="<%= note.content %>" onclick="openNoteModal(this)">
                                    <div class="card-inner">
                                        <% if (note.tags) { %>
                                            <% note.tags.split(',').forEach(singleTag => { %>
                                                <span class="profile tag"><%= singleTag %></span>
                                            <% }) %>
                                        <% } %>
                                        <h3 class="note-title"><%= note.title %></h3>
                                        <div class="note-info">
                                            <span><i class="fa-solid fa-house-chimney-user"></i> <%= note.upvotes %> Upvotes</span>
                                            <span><i class="fa-solid fa-file-lines"></i> by <%= note.author_name %></span>
                                        </div>
                                    </div>
                                </a>
                                <form action="/delete-note-profile/<%= note.note_id %>" method="POST" class="delete-form-inline">
                                    <button type="submit" class="delete-icon-btn" title="Delete Note" onclick="return confirm('Are you sure?')">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </button>
                                </form>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p style="color: #b9b9c9; text-align: center; width: 100%; padding-top: 20px;">
                            You haven't uploaded any notes yet.
                        </p>
                    <% } %>
                </div>
            </section>
        </main>
    </div>

    <!-- Note Modal Structure -->
    <div id="noteModal" class="modal-overlay" onclick="closeNoteModal(event)">
        <div class="modal-card" onclick="event.stopPropagation()">
            <button class="modal-close" onclick="closeNoteModal()"><i class="fa-solid fa-xmark"></i></button>
            <h2 id="modalTitle" class="modal-title"></h2>
            <div id="modalContent" class="modal-content"></div>
        </div>
    </div>

    <script>
        function openNoteModal(element) {
            const title = element.getAttribute('data-title');
            const content = element.getAttribute('data-content');
            document.getElementById('modalTitle').innerText = title;
            document.getElementById('modalContent').innerText = content;
            document.getElementById('noteModal').style.display = 'flex';
            document.body.style.overflow = 'hidden'; 
        }

        function closeNoteModal(event) {
            if (event && event.target !== document.getElementById('noteModal')) return;
            document.getElementById('noteModal').style.display = 'none';
            document.body.style.overflow = 'auto'; 
        }
    </script>
</body>
</html>