<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OnlyNotes | Notes Made Simple</title>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
</head>
<body>

    <header class="navbar">
        <div class="logo-area">
            <div class="logo-icon">N</div>
            <span class="logo-text">OnlyNotes</span>
        </div>
        
        <nav class="nav-links">
            <button onclick="switchTab('foryou')" id="btn-foryou" class="tab-btn active">For You</button>
            <button onclick="switchTab('trending')" id="btn-trending" class="tab-btn">Trending</button>
            <button onclick="switchTab('following')" id="btn-following" class="tab-btn">Following</button>
        </nav>

        <div class="user-profile">
            <a href="/profile" style="display: block; transition: opacity 0.3s;" onmouseover="this.style.opacity='0.8'" onmouseout="this.style.opacity='1'">
                <img src="https://ui-avatars.com/api/?name=<%= name %>&background=a855f7&color=fff" style="width: 40px; height: 40px; border-radius: 50%;">
            </a>
        </div>
    </header>

    <div class="app-container">
        <aside class="sidebar-left">
            <div class="sidebar-group">
                <p class="group-title">UTILITIES</p>
                <a href="/upload" style="text-decoration: none; color: inherit;">
                  <button class="menu-item upload-btn"><i class="fa-solid fa-plus text-purple-500"></i> Upload Note</button>
                </a>
                <a href="/chat" style="text-decoration: none; color: inherit;">
                  <button class="menu-item upload-btn"><i class="fa-solid fa-message text-purple-500"></i> Chat</button>
                </a>
                <a href="/dashboard" style="text-decoration: none; color: inherit;">
                  <button class="menu-item upload-btn"><i class="fa-solid fa-receipt text-purple-500"></i> Dashboard</button>
                </a>
                <a href="/leaderboard" style="text-decoration: none; color: inherit;">
                  <button class="menu-item upload-btn"><i class="fa-solid fa-trophy text-purple-500"></i> Leaderboard</button>
                </a>
                <form action="/logout?_method=DELETE" method="POST" style="text-decoration: none;">
                    <button type="submit" class="menu-item upload-btn"><i class="fa-solid fa-right-from-bracket text-purple-500"></i> Sign Out</button>
                </form>
            </div>

            <div class="filter-section" >
                <p class="group-title" style="margin-top: 20px;">FILTER & SEARCH</p>
                <div class="search-box" style="position: relative; margin-top: 30px; margin-bottom: 20px;">
                    <i class="fa-solid fa-magnifying-glass" style="position: absolute; left: 12px; top: 50%; transform: translateY(-50%); color: #a855f7;"></i>
                    <input type="text" id="sidebar-search" placeholder="Search tags..." 
                           style="width: 100%; padding: 10px 10px 10px 35px; background: #111; border: 1px solid #333; border-radius: 8px; color: white; outline: none; font-size: 0.9rem;">
                </div>
                <div id="tag-chips"></div>
                <input type="hidden" name="tags" id="hidden-tags">
            </div>
                <script>
                const tagInput = document.getElementById('sidebar-search');
                const chipContainer = document.getElementById('tag-chips');
                const hiddenInput = document.getElementById('hidden-tags');
                let tags = [];
                tagInput.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        const tag = tagInput.value.trim().toLowerCase();
                        if (tag && !tags.includes(tag)) {
                            tags.push(tag);
                            renderChips();
                            tagInput.value = '';
                            applyTagFilters();
                        }
                    }
                });
                function renderChips() {
                    chipContainer.innerHTML = '';
                    tags.forEach((tag, index) => {
                        const chip = document.createElement('span');
                        chip.className = 'chip';
                        chip.innerHTML = `${tag} <button type="button" onclick="removeTag(${index})">&times;</button>`;
                        chipContainer.appendChild(chip);
                    });
                    hiddenInput.value = tags.join(',');
                }
                function removeTag(index) {
                    tags.splice(index, 1);
                    renderChips();
                    applyTagFilters();
                }
                function applyTagFilters() {
                    const cards = document.querySelectorAll('.note-card');
                    let visibleCount = 0;
                    cards.forEach(card => {
                        const cardTags = Array.from(card.querySelectorAll('.mini-tag')).map(t => t.innerText.toLowerCase().replace('#', '').trim());
                        const isMatch = tags.some(t => cardTags.includes(t));
                        if (tags.length === 0 || isMatch) {
                            card.style.display = 'block';
                            visibleCount++;
                        } else {
                            card.style.display = 'none';
                        }
                    });
                    const emptyMsg = document.getElementById('empty-msg');
                    if (emptyMsg) {
                        emptyMsg.style.display = (visibleCount === 0) ? 'flex' : 'none';
                    }
                }
                </script>
        </aside>
        <main class="feed-area">
            <div class="card-stack" style="position: relative; width: 100%; height: 600px;">
                <% if (notes && notes.length > 0) { %>
                    <% notes.reverse().forEach((note, index) => { %>
                        <div class="note-card" id="card-<%= index %>" data-note-id="<%= note.note_id %>" style="z-index: <%= index %>; transform: translateX(-50%) translateY(<%= (notes.length - 1 - index) * 4 %>px) scale(<%= 1 - (notes.length - 1 - index) * 0.02 %>);">
                            <div class="tag-row">
                                <% if (note.tag_list) { %>
                                    <% note.tag_list.split(',').forEach(tag => { %>
                                        <span class="mini-tag"><%= tag.toUpperCase() %></span>
                                    <% }) %>
                                <% } %>
                            </div>
                            <h3 class="card-title"><%= note.title %></h3>
                            <div class="card-author">
                                <a href="/profile" style="display: block; transition: opacity 0.3s;" onmouseover="this.style.opacity='0.8'" onmouseout="this.style.opacity='1'">
                                    <img src="https://ui-avatars.com/api/?name=<%= note.author_name %>&background=a855f7&color=fff" style="width:22px; height:22px; border-radius:50%;">
                                </a>
                                <span>by <%= note.author_name %></span>
                                <span style="margin-left: auto;"><i class="fa-solid fa-thumbs-up"></i> <%= note.upvotes || 0 %></span>
                            </div>
                            <div class="card-body">
                                "<%= note.subtitle %>"
                            </div>
                            <div class="card-actions">
                                <button class="btn-circle btn-reject" onclick="swipeCard(<%= index %>, 'left')"><i class="fa-solid fa-xmark" style="color: red;"></i></button>
                                <button class="btn-circle btn-center"><i class="fa-solid fa-book-open"></i></button>
                                <button class="btn-circle btn-heart" onclick="swipeCard(<%= index %>, 'right')"><i class="fa-solid fa-heart" style="color: #00ff88;"></i></button>
                            </div>
                        </div>
                    <% }) %>
                <% } %>
                <div id="empty-msg" style="display: none; flex-direction: column; align-items: center; justify-content: center; height: 300px; color: #94a3b8;">
                        <p style="font-size: 1.2rem;">No more notes!</p>
                        <p style="font-size: 0.9rem;">Check back later.</p>
                </div>
            </div>
        </main>

        <aside id="sidebar-right" class="sidebar-right hidden">
            <div class="leaderboard-card">
                <h3 class="leaderboard-title">Top Contributors âœ¨</h3>
                
                <div class="leaderboard-item current-user">
                    <img src="https://ui-avatars.com/api/?name=<%= name %>&background=a855f7&color=fff" class="rank-avatar">
                    <span class="rank-name"><%= name %></span>
                </div>
                <hr style="border: 0.5px solid #2d2d44; margin: 10px 0;">

                <% leaderboard.forEach((user, index) => { %>
            <div class="leaderboard-item">
                <span><%= index + 1 %>.</span>
                <span class="rank-name"><%= user.name %> (<%= user.points %> pts)</span>
                
                <% if (index === 0) { %>
                    <i class="fa-solid fa-medal medal medal-gold"></i>
                <% } else if (index === 1) { %>
                    <i class="fa-solid fa-medal medal medal-silver"></i>
                <% } else if (index === 2) { %>
                    <i class="fa-solid fa-medal medal medal-bronze"></i>
                <% } %>
            </div>
        <% }) %>

                <a href="/leaderboard" style="text-decoration: none; color: inherit;">
                  <button class="view-full-btn">View Leaderboard</button>
                </a>
            </div>
        </aside>
    </div>

    <script src="/app.js"></script>
</body>
</html>